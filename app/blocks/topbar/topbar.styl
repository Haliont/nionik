.topbar
	display flex
	align-items center
	font-size $topbar-height
	height 1em
	background-color #fff
	transition background .5s ease

	+below($desktop)
		font-size $topbar-height-mobile
	
	&--pinned
		background-color $accent
		background-image linear-gradient(to right, #ef74fb 0%, $accent 100%)
		
		.burger,
		.burger::before,
		.burger::after
			background #fff

	&__inner
		display flex
		align-items center
		justify-content space-between
		max-width $content-width
		height 100%
		width 100%
		margin auto
		padding 0 $content-padding
		
		+below($desktop)
			padding 0 $content-padding-mobile
	
	&__burger
		display none
		
		+below($desktop)
			display block
			margin-right $burger-size * .5

	&__logo
		unflexible()
		margin-right $logo-size
		
		+below($desktop)
			margin-right $logo-size-mobile * .35

	&__hybrid-nav
		flexible()

		.topbar--pinned &
			visibility hidden
			opacity 0

			+below($desktop)
				visibility visible
				opacity 1
		
	&__phone
		display none
		font-size .175em

		+below($desktop)
			display block
			font-size .28em
		
		.topbar--pinned &
			display block
			
			.phone-link
				color #fff
