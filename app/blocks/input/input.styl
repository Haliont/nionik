.input
	display block
	position relative

	&__field
		display block
		width 100%
		height 50px
		padding 0 20px
		line-height 50px
		border-radius 7px
		border 1px solid transparent
		outline none
		background rgba(#7c8ca2, .1)
		transition all $animation-speed ease

		&:focus
			border-color rgba(124, 140, 162, 0.8)
			background #fff
			box-shadow 0 1px 4px 0 rgba(124, 140, 162, 0.4), 0 2px 20px 0 rgba(124, 140, 162, 0.6)

	&__suggest
		position absolute
		top 52px
		left 0
		right 0
		max-height 175px
		overflow-x hidden
		overflow-y scroll
		padding-top 10px
		list-style none
		border-radius 7px
		background #fff
		box-shadow 0 6px 12px 0 rgba(0, 0, 0, 0.32)
		color rgba(37, 37, 37, 0.5)
		z-index -1
		opacity 0
		transition opacity $animation-speed

		.input__field:focus + &
			z-index 0
			opacity 1

	&__suggest-item
		padding 0 20px
		line-height 30px
		white-space nowrap
		user-select none
		cursor pointer

		&:hover,
		&:focus
			color #fff
			background-color #ffc06e