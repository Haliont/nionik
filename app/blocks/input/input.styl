.input
	display block
	position relative

	&__field
		display block
		width 100%
		height 50px
		padding 0 20px
		line-height 50px
		border-radius 7px
		border 1px solid transparent
		outline none
		background rgba(#7c8ca2, .1)
		transition all $animation-speed ease

		&:focus
			border-color rgba(124, 140, 162, 0.8)
			background #fff
			box-shadow 0 1px 4px 0 rgba(124, 140, 162, 0.4), 0 2px 20px 0 rgba(124, 140, 162, 0.6)

		.input--error &
			background rgba(228, 40, 40, 0.1)
			border-color rgba(255, 0, 0, 0.4)

	&__error
		position absolute
		z-index -1
		bottom 58px
		left 50%
		transform translateX(-50%)
		display table
		max-width 100%
		padding 11px 20px
		font-size 14px
		line-height 18px
		border-radius 5px
		color #fff
		background #f54a4a
		opacity 0
		transition opacity .2s ease

		.input--error:hover &,
		.input__field:focus + &
			z-index 0
			opacity 1

		&::before
			content ''
			position absolute
			bottom -6px
			left 50%
			transform translateX(-50%)
			width 0
			height 0
			border-style solid
			border-width 6px 5px 0 5px
			border-color #f54a4a transparent transparent transparent

	&__suggest
		position absolute
		top 52px
		left 0
		right 0
		max-height 175px
		overflow-x hidden
		overflow-y scroll
		padding-top 10px
		list-style none
		border-radius 7px
		background #fff
		box-shadow 0 6px 12px 0 rgba(0, 0, 0, 0.32)
		color rgba(37, 37, 37, 0.5)
		z-index -1
		opacity 0
		transition opacity $animation-speed

		.input__field:focus + &
			z-index 0
			opacity 1

	&__suggest-item
		padding 0 20px
		line-height 30px
		white-space nowrap
		user-select none
		cursor pointer

		&:hover,
		&:focus
			color #fff
			background-color #ffc06e
