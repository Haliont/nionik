.button-light
	display inline-block
	padding 3px
	font-size $font-size
	background rgba(#fff, .5)
	border-radius .625em
	cursor pointer
	transition all $animation-speed
	user-select none

	+below($tablet)
		font-size $font-size - 1px

	&:hover,
	&:focus
		background #fff
		box-shadow 0 2px 25px 0 #ffffff

	&__inner
		height 2.5em
		padding 0 1.5em
		line-height 2.5em
		color $accent
		background #fff
		border-radius .5em
		border 1px solid $accent
		transition all $animation-speed

		.button-light:hover &,
		.button-light:focus &
			color #fff
			background $accent
