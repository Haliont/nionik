.info
	&__inner
		position relative
		max-width $content-width
		width 100%
		min-height 350px
		margin auto
		padding 45px 70px 40px
		border-radius 10px
		background-color #fbf4f3

		+below($desktop)
			padding 36px $content-padding-mobile 0
			border-radius 0

	&__image
		position absolute
		left 20px
		bottom 0
		width 43%

		+below($desktop)
			position static
			display block
			max-width 300px
			width 100%
			margin 30px auto 0

	&__table
		padding-left 50%

		+below($desktop)
			max-width 500px
			margin auto
			padding-left 0

		+below($mobile)
			font-size 15px

		table
			width 100%
			table-layout fixed

		td
			padding-right 10px
			padding-bottom 8px

			&:first-child
				width 54%
